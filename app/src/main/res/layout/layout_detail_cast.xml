<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_cast_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dist_medium"
    android:background="@color/text_secondary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dist_small"
    android:paddingLeft="@dimen/dist_large"
    android:paddingRight="@dimen/dist_large"
    android:paddingTop="@dimen/dist_large">

    <!-- Cast Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/MovieItemIconsStyle"
            android:src="@drawable/icon_cast"
            tools:ignore="ContentDescription" />

        <mobile.esprit.tn.mobileteam.Ui.RobotoBoldTextView
            style="@style/MovieItemHeaderStyle"
            android:text="@string/detail_header_cast" />

    </LinearLayout>

    <!-- Cast Item 1 -->
    <LinearLayout
        android:id="@+id/project_cast_item1"
        style="@style/MovieCastHolderStyle">
        <!-- Image -->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/project_cast_image1"
            style="@style/MovieCastImageStyle" />
        <!-- Text Area -->
        <LinearLayout style="@style/MovieCastTextHolderStyle">
            <!-- Name -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoRegularTextView
                android:id="@+id/project_cast_name1"
                style="@style/MovieCastNameStyle"
                tools:text="Bruce Wayne" />
            <!-- Role -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoLightTextView
                android:id="@+id/project_cast_role1"
                style="@style/MovieCastRoleStyle"
                tools:text="as Batman" />
        </LinearLayout>
    </LinearLayout>

    <!-- Cast Item 2 -->
    <LinearLayout
        android:id="@+id/project_cast_item2"
        style="@style/MovieCastHolderStyle">
        <!-- Image -->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/project_cast_image2"
            style="@style/MovieCastImageStyle" />
        <!-- Text Area -->
        <LinearLayout style="@style/MovieCastTextHolderStyle">
            <!-- Name -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoRegularTextView
                android:id="@+id/project_cast_name2"
                style="@style/MovieCastNameStyle"
                tools:text="Clark Kent" />
            <!-- Role -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoLightTextView
                android:id="@+id/project_cast_role2"
                style="@style/MovieCastRoleStyle"
                tools:text="as Superman" />
        </LinearLayout>
    </LinearLayout>

    <!-- Cast Item 3 -->
    <LinearLayout
        android:id="@+id/project_cast_item3"
        style="@style/MovieCastHolderStyle">
        <!-- Image -->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/project_cast_image3"
            style="@style/MovieCastImageStyle" />
        <!-- Text Area -->
        <LinearLayout style="@style/MovieCastTextHolderStyle">
            <!-- Name -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoRegularTextView
                android:id="@+id/project_cast_name3"
                style="@style/MovieCastNameStyle"
                tools:text="Peter Parker" />
            <!-- Role -->
            <mobile.esprit.tn.mobileteam.Ui.RobotoLightTextView
                android:id="@+id/project_cast_role3"
                style="@style/MovieCastRoleStyle"
                tools:text="as Spider-Man" />
        </LinearLayout>
    </LinearLayout>

    <!-- See All Button -->
    <include
        android:id="@+id/project_cast_see_all"
        layout="@layout/layout_detail_see_all" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_overview_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dist_medium"
    android:background="@color/text_secondary"
    android:orientation="vertical"
    android:padding="@dimen/dist_large">

    <!-- Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/MovieItemIconsStyle"
            android:src="@drawable/icon_overview"
            tools:ignore="ContentDescription" />

        <mobile.esprit.tn.mobileteam.Ui.RobotoBoldTextView
            style="@style/MovieItemHeaderStyle"
            android:text="@string/detail_header_overview" />
    </LinearLayout>

    <!-- Value -->
    <mobile.esprit.tn.mobileteam.Ui.RobotoLightTextView
        android:id="@+id/project_overview_value"
        style="@style/MovieItemValueStyle"
        tools:text="My movie overview goes here" />

</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light"></style>

    <style name="AppTheme1" parent="AppBaseTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>

    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

    </style>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Detail Activity Buttons -->
    <style name="MovieButtonStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieButtonContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">@dimen/dist_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieButtonIconStyle">
        <item name="android:layout_width">@dimen/detail_button_icon_size</item>
        <item name="android:layout_height">@dimen/detail_button_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MovieButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dist_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!-- Detail Activity Item -->
    <style name="MovieItemIconsStyle">
        <item name="android:layout_height">@dimen/detail_icon_size</item>
        <item name="android:layout_width">@dimen/detail_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MovieItemHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dist_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MovieItemValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dist_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <!-- Detail Activity Crew Style -->
    <style name="MovieCrewItemValueStyle" parent="@style/MovieItemValueStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Detail Activity Cast Style -->
    <style name="MovieCastHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dist_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieCastImageStyle">
        <item name="android:layout_width">@dimen/detail_cast_image_width</item>
        <item name="android:layout_height">@dimen/detail_cast_image_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/default_image_background</item>
    </style>

    <style name="MovieCastTextHolderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dist_medium</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieCastNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MovieCastRoleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Detail Activity See All Button -->
    <style name="MovieSeeAllHolderStyle">
        <item name="android:layout_height">@dimen/detail_see_all_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dist_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MovieSeeAllTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/detail_button_see_all</item>
    </style>

    <style name="MovieSeeAllArrowStyle">
        <item name="android:layout_height">@dimen/detail_arrow_size</item>
        <item name="android:layout_width">@dimen/detail_arrow_size</item>
        <item name="android:layout_marginLeft">@dimen/dist_small</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Review Activity -->
    <style name="ReviewIconStyle" parent="MovieButtonIconStyle">
        <item name="android:layout_width">@dimen/review_user_icon_size</item>
        <item name="android:layout_height">@dimen/review_user_icon_size</item>
    </style>

    <style name="ReviewAuthorStyle" parent="MovieItemHeaderStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="ReviewBodyStyle" parent="MovieItemValueStyle">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
